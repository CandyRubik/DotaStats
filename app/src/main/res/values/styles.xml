<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.DotaStats.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:buttonCornerRadius">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Button</item>
        <item name="android:backgroundTint">@color/accent</item>
    </style>
    
    <attr name="background_color" format="color" />
    <attr name="primary_color" format="color" />
    <attr name="winLoseStatViewStyle" format="reference" />

    <declare-styleable name="WinLoseStatView">
        <attr name="positivePercent" format="integer"/>
        <attr name="positiveColor" format="color"/>
        <attr name="negativeColor" format="color"/>
        <attr name="strokeColor" format="color"/>
    </declare-styleable>

    <style name="WinLoseStatViewStyle">
        <item name="positivePercent">30</item>
        <item name="positiveColor">@color/positive_color</item>
        <item name="negativeColor">@color/negative_color</item>
    </style>

    <style name="WinLoseStatViewStyle.Dark">
        <item name="positivePercent">30</item>
        <item name="positiveColor">@color/positive_color</item>
        <item name="negativeColor">@color/negative_color</item>
    </style>


</resources>